
<%= form_tag sessions_path, class: 'form-horizontal', role: 'form'     do %>
<div class="vertically-centered-form">
    <div class="form-group">
      <%= label_tag :course, nil, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
          <%= text_field_tag 'course', nil, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= label_tag :start, nil, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
            <div class='input-group date' id='datetimepicker1'>
                <input type='text' class="form-control" />
                <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
            
      </div>
    </div>
    <div id="submit-button">
        <button type="button"  class="btn btn-default">Submit</button>    
    </div>
</div>
<% end %>

<%# text_field_tag 'start', nil, class: 'form-control' %>
<script type="text/javascript">
     $(function () {
        $('#datetimepicker1').datetimepicker();
    });
</script>