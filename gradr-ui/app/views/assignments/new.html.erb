<%= form_tag sessions_path, class: 'form-horizontal', role: 'form'     do %>
<div class="vertically-centered-form">
    <div class="form-group">
      <%= label_tag :assignment, nil, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
          <%= text_field_tag 'assignment', nil, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= label_tag :commit, nil, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
          <%= text_field_tag 'commit', nil, class: 'form-control' %>
      </div>
    </div>
    <div id="submit-button">
        <button type="button"  class="btn btn-default">Submit</button>    
    </div>
</div>
<% end %>